datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  id             String          @id @default(cuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  country        String?
  state          String?
  city           String?
  postalCode     String?
  advertisements Advertisement[]
  users          User[]
}

model Business {
  id             String          @id @default(cuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  name           String?
  description    String?
  advertisements Advertisement[]
  contactDetails Json?
}

model Advertisement {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  typeField  String?
  contentUrl String?
  business   Business? @relation(fields: [businessId], references: [id])
  businessId String?
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
}

model User {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  firstName    String?
  lastName     String?
  username     String    @unique
  email        String?   @unique
  password     String
  roles        Json
  emailContact String?
  location     Location? @relation(fields: [locationId], references: [id])
  locationId   String?
}
